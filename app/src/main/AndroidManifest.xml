<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SnapCencus"
        tools:targetApi="31">
        <activity
            android:name=".ui.user.ocr.camera.CameraActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.ocr.ktp.ResultKtpActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.ocr.ktp.KtpOcrActivity"
            android:exported="false" />
        <activity
            android:name=".ui.admin.main.MainAdminActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.detail.DetailPendudukActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.main.MainUserActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.user.list.PendudukListActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.search.SearchPendudukActivity"
            android:exported="false" />
        <activity
            android:name=".ui.pin.PinActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.ktp.camera.KtpCameraActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.kk.KKResultActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.kk.KKScanActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.ktp.result.KtpResultActivity"
            android:exported="true" />

        <!-- Trigger Google Play services to install the backported photo picker module. -->
        <!-- suppress AndroidDomInspection -->
        <service
            android:name="com.google.android.gms.metadata.ModuleDependencies"
            android:enabled="false"
            android:exported="false"
            tools:ignore="MissingClass">
            <intent-filter>
                <action android:name="com.google.android.gms.metadata.MODULE_DEPENDENCIES" />
            </intent-filter>

            <meta-data
                android:name="photopicker_activity:0:required"
                android:value="" />
        </service>
    </application>

</manifest>